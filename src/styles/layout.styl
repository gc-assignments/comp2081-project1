====================================================================== */ 

/* Navbar */
.brand-logo
  >img
    margin-top .25em

.nav-link
  color #616161

.dropdown-content>li>a
  padding 1.45rem 1rem

/* Footer */
footer.page-footer
  background-color $brown

.footer-copyright
  text-align center




/* ====================================================================== 
  #HOME
====================================================================== */ 

.hero
  text-align center
  margin 3rem auto 5rem

.main-title
  // text-transform uppercase
  font-size 3rem
  font-weight 600




/* ====================================================================== 
  #GALLERY
====================================================================== */ 

.gallery-img
  margin-bottom 2em
  transition box-shadow 0.2s
  &:hover
  &:focus
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
